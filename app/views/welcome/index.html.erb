<h2>Welcome</h2>
  <%= link_to 'Sign in with Spotify', '/auth/spotify' %>
  <!-- <%= link_to 'users', 'users'%> -->
  <%= @user1.playlists %><br>XXX<hr>
  <%= @user2.playlists %>
    <%= form_tag root_path, method: "get" do %>
      <%= text_field_tag :q %>
      <%= submit_tag "Search Artist" %>
    <% end %>

    <% if @artists %>

      <%= @artists.map { |artist| artist.name }.join(', ') %>
      <% @artists.each do |artist| %>

      <h2>Artist Name</h2>
        <%= artist.name %>
      <h2>Artist Populairty #wrong?</h2>
        <%= artist.popularity %>
      <h2>Artist Genres</h2>
        <%= artist.genres %>
      <h2>Artist Images</h2>
        <% artist.images.each do |image| %>
        <img src="<%= image['url'] %>" alt="" />
      <h2>Artist Top Tracks</h2>
        <% artist.top_tracks(:US).each do |foo| %>
        <div>
          <img src="<%= foo.album.images[2]["url"]%>" />
          <%= link_to foo.name, "https://open.spotify.com/track/#{foo.uri.slice(14..foo.uri.length)}" %>
          <% end %>
      </div>
      <h2>Artist Albums</h2>
        <%= artist.albums.each do |album| %>
      <p>
        <%= album %>
      </p><br>
      <% end %>
    <% end %>
  <% end %>
<% end %>

